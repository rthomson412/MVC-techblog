<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <textarea name="post-text">{{post.post_text}}</textarea>
    </div>
    <div>
      Posted on {{format_date post.created_at}}
      |
      <a href="/dashboard/edit/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save</button>
    <button type="button" class="delete-post-btn">Delete</button>
  </form>
</article>


<!--Scripts-->
<script src="/js/editpost.js"></script>
<script src="/js/deletepost.js"></script>
<script src="/js/comment.js"></script>
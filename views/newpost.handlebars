<section>
  <a href="/dashboard" style="float:right">Back to Dashboard</a>
    <h2>Create a blog post</h2>

    <form class="new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input name="post-title" class="post-title" type="text" id="post-title" placeholder="Insert blog title"/>
      </div>
      <div class="form-group">
        <label for="post-text">Content:</label>
        <textarea name="post-text" class="post-text" type="text" id="post-text"  placeholder="Insert blog content"/></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-success" id="save-post-btn" type="submit">Save</button>
      </div>
    </form>
</section>

<script src="/js/newpost.js"></script>